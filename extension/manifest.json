{
  "manifest_version": 2,
  "name": "Text Sender",
  "version": "1.0",
  "description": "Sends selected text and URL to a Python backend",
  "permissions": ["contextMenus", "activeTab", "http://127.0.0.1:8000/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}